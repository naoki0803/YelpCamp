<% layout("layouts/boilerplate")%>

<div class="row">
    <div class="col-6 offset-3">
        <div class="card mb-3">
            <img src="<%= campground.image %>" class="card-img-top" alt="...">
            
            <div class="card-body">
                <h5 class="card-title"><%= campground.title %></h5>
                <p class="card-text"><%= campground.description %></p>
            </div>
            
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted"><%= campground.title %></li>
                <li class="list-group-item">¥<%= campground.price %>/泊</li>
            </ul>

            <div class="card-body">
                <a href="/campgrounds/<%=campground._id%>/edit" class="btn btn-info">編集</a>
                <form class="d-inline" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="post">
                    <button class="btn btn-danger" type="submit">削除</button>
                </form>
            </div>
            
            <div class="card-footer test-muted">
                <a href="/campgrounds" class="text-muted">2 days ago</a>
            </div>
            
        </div>
    </div>
</div>